\def\@docinfo#1#2{\@inspdf{%
    \special{ pdf: docinfo << /Author (#1) /Creator (#1) /Title (#2) >> }}}

\def\docinfo#1#2{\gdef\@@docauthor{#1}\gdef\@@doctitle{#2}}

